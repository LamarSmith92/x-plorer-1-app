<%= form_for [@satellite, @satellite.comments.build] do |f| %>
<div class="container pb-cmnt-container">
  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-8">
      <div class="panel panel-info">
        <div class="panel-body">
          <h3>Post Comment!</h3>
          <%= f.label :title %><br>
          <%= f.text_field :title, minimum: 5 %><br>
          <%= f.label :Comment %>
          <br>
          <%= f.text_area :content, class:"pb-cmnt-textarea" %>
            <%= f.submit "Post" %>

        </div>
      </div>
    </div>
    <div class="col-sm-2">
    </div>
  </div>
</div>

<% end %>
